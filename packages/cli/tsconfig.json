{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "es6",
    "module": "Node16",
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test", "**/*.test.ts", "**/*.test.tsx"]
}
