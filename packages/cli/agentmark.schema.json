{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/product.schema.json",
    "title": "Agentmark",
    "description": "Agentmark is a cool tool for writing agents in markdown.",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "description": "The schema of the agentmark"
        },
        "version": {
            "type": "string",
            "description": "The version of the agentmark schema"
        },
        "mdxVersion": {
            "type": "string",
            "description": "The version of the agentmark mdx format"
        },
        "agentmarkPath": {
            "type": "string",
            "description": "The path to the agentmark directory"
        },
        "builtInModels": {
            "type": "array",
            "description": "Models available for use in prompts. Use provider/model format (e.g., 'openai/gpt-4o', 'anthropic/claude-sonnet-4-20250514') for automatic provider resolution via registerProviders().",
            "items": {
                "type": "string",
                "description": "Model name in provider/model format (e.g., 'openai/gpt-4o')"
            }
        },
        "modelSchemas": {
            "type": "object",
            "description": "The model schemas for the agentmark",
            "patternProperties": {
                "^[a-zA-Z0-9_-]+$": {
                    "type": "object",
                    "description": "The model schema for the agentmark",
                    "properties": {
                        "label": {
                            "type": "string",
                            "description": "The label of the model schema"
                        },
                        "settings": {
                            "type": "object",
                            "description": "The settings of the model schema",
                            "properties": {
                                "patternProperties": {
                                    "^[a-zA-Z0-9_-]+$": {
                                        "type": "object",
                                        "description": "The setting of the model schema",
                                        "properties": {
                                            "type": {
                                                "type": "string",
                                                "description": "The type of the setting"
                                            },
                                            "ui": {
                                                "type": "string",
                                                "description": "The ui of the setting"
                                            },
                                            "order": {
                                                "type": "number",
                                                "description": "The order of the setting"
                                            },
                                            "label": {
                                                "type": "string",
                                                "description": "The label of the setting"
                                            },
                                            "minimum": {
                                                "type": "number",
                                                "description": "The minimum of the setting"
                                            },
                                            "maximum": {
                                                "type": "number",
                                                "description": "The maximum of the setting"
                                            },
                                            "default": {
                                                "type": "number",
                                                "description": "The default of the setting"
                                            },
                                            "multipleOf": {
                                                "type": "number",
                                                "description": "The multiple of the setting"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "mcpServers": {
            "type": "object",
            "description": "Configuration for MCP servers by name",
            "patternProperties": {
                "^[a-zA-Z0-9_-]+$": {
                    "oneOf": [
                        {
                            "type": "object",
                            "required": [
                                "url"
                            ],
                            "properties": {
                                "url": {
                                    "type": "string"
                                },
                                "headers": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "string"
                                    }
                                }
                            },
                            "additionalProperties": false
                        },
                        {
                            "type": "object",
                            "required": [
                                "command"
                            ],
                            "properties": {
                                "command": {
                                    "type": "string"
                                },
                                "args": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "cwd": {
                                    "type": "string"
                                },
                                "env": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "string"
                                    }
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                }
            },
            "additionalProperties": false
        },
        "evals": {
            "type": "array",
            "description": "Evals registered in eval registry",
            "items": {
                "type": "string",
                "description": "The name of the eval registered in eval registry"
            }
        }
    },
    "required": [
        "version",
        "agentmarkPath"
    ],
    "additionalProperties": false
}