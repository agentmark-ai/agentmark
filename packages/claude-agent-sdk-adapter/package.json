{
  "name": "@agentmark-ai/claude-agent-sdk-adapter",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./runner": {
      "import": {
        "types": "./dist/runner.d.ts",
        "default": "./dist/runner.js"
      },
      "require": {
        "types": "./dist/runner.d.cts",
        "default": "./dist/runner.cjs"
      }
    },
    "./traced": {
      "import": {
        "types": "./dist/traced/index.d.ts",
        "default": "./dist/traced/index.js"
      },
      "require": {
        "types": "./dist/traced/index.d.cts",
        "default": "./dist/traced/index.cjs"
      }
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsup --format cjs,esm --dts --clean",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@agentmark-ai/loader-file": "*",
    "@agentmark-ai/prompt-core": "*",
    "@agentmark-ai/sdk": "*",
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.0",
    "@opentelemetry/sdk-trace-base": "^1.29.0",
    "@types/node": "^22.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.2",
    "vitest": "^3.0.8",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "@agentmark-ai/prompt-core": "*",
    "@agentmark-ai/sdk": "*",
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@opentelemetry/api": "^1.9.0"
  },
  "peerDependenciesMeta": {
    "@opentelemetry/api": {
      "optional": true
    }
  },
  "dependencies": {
    "zod": "^4.0.0"
  },
  "files": [
    "dist/"
  ]
}
