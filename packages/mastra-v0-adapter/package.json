{
  "name": "@agentmark/mastra-v0-adapter",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./runner": {
      "import": {
        "types": "./dist/runner.d.ts",
        "default": "./dist/runner.js"
      },
      "require": {
        "types": "./dist/runner.d.cts",
        "default": "./dist/runner.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@agentmark/prompt-core": "workspace:*",
    "@mastra/core": "^0.13.2",
    "@mastra/mcp": "^0.13.0",
    "tsup": "^8.0.1",
    "typescript": "^5.5.4",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "json-schema-to-zod": "^2.6.1",
    "zod": "^4.0.17"
  },
  "peerDependencies": {
    "@agentmark/prompt-core": "*",
    "@mastra/core": "<0.20.0",
    "@mastra/mcp": "<0.13.4"
  }
}
